<Window x:Class="VippsServicesApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VippsServicesApp.Views"
        xmlns:contexts="clr-namespace:VippsServicesApp.Contexts"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800" d:DataContext="{d:DesignInstance Type=contexts:MainContext}">
    
    <TabControl SelectedIndex="{Binding SelectedContextIndex, Mode=TwoWay}">
        <TabItem DataContext="{Binding LogContext}" Header="{Binding Title}" d:Header="Log">
            <local:LogView/>
        </TabItem>
        <TabItem DataContext="{Binding SettingsContext}" Header="{Binding Title}" d:Header="Settings">
            <local:SettingsView/>
        </TabItem>
        <TabItem DataContext="{Binding PaymentContext}" Header="{Binding Title}" d:Header="Payment" d:IsSelected="True">
            <local:PaymentView/>
        </TabItem>
    </TabControl>
</Window>
