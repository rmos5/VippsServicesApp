{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Debug", "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Verbose"
      //"Override": {
      //  "Microsoft": "Error",
      //  "System": "Error"
      //}
    },
    //"Filter": [
    //  { 
    //    "Name": "ByIncludingOnly",
    //    "Args": {
    //      "expression": "SourceContext like 'VippsServicesApp.App'"
    //    }
    //  }
    //],
    "WriteTo": [
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": {
            "Default": "Debug"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "path": "Logs/VippsServicesApp-App.txt",
          //"encoding": ""; //todo: not working currently
          "fileSizeLimitBytes": 100000,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "retainedFileTimeLimit": "60:00:00:00",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Verbose",
          "path": "Logs/VippsServicesApp.txt",
          //"encoding": ""; //todo: not working currently
          "fileSizeLimitBytes": 100000,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Hour",
          "retainedFileTimeLimit": "60:00:00:00",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
